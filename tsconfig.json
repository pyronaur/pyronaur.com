{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"types": [
			"astro/client"
		],
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@layouts/*": [
				"src/components/layouts/*.astro"
			],
			"@data/*": [
				"src/data/*.ts"
			],
			"@post-components/*": [
				"src/components/post-components/*"
			],
		},
		// Enable JSON imports.
		"resolveJsonModule": true,
		// Enable stricter transpilation for better output.
		"isolatedModules": true,
		// Tell TypeScript where your build output is
		"outDir": "./dist"
	}
}